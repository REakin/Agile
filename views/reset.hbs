        margin: 20px auto;
        width: 350px;
        height: 40px;
        box-shadow: none;
        border: none;
    }

    #loginBtn {
        position: relative;
        background-color: #a099a83d;
        width: 80px;
        height: 40px;
        color: #e1e1e1;
        left: 70%;
    }

    h1 {
        position: relative;
        top: 25px;
        left: 35px;
        margin: 25px 40px;
        font-family: 'Roboto', sans-serif;
        color: black;
    }

    #reg_note {
        position: relative;
        height: 50px;
        top: 10px;
        line-height: 48px;
        background-color: #a099a83d;
        color: #e1e1e1;
        text-align: center;
        border-radius: 0px 0px 20px 20px;
