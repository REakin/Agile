<!DOCTYPE html>
<html>
<head>
<title>Succeed</title>

<style>
    body {
        background-color: #323232;
    }

    #content{
    	position: relative;
    	top: 50px;
    	background-color: #e1e1e1;
    	height: 250px;
    	width: auto;
    }

    h1 {
    	position: relative;
    	top: 20px;
        font-family: Arial, Helvetica, sans-serif;
        text-align: left;
        color: black;
        width: 200px;
        margin: 20px auto;
    }

    .Btn {
        position: relative;
        left: 45%;
        top: 50px;
        width: 150px;
        height: 50px;
        background-color: #a099a83d;
        color: #e1e1e1;
        box-shadow: none;
        border: none;
        border-radius: 10px;
    }

    #second{
    	position: relative;
    	top: 60px;
    	background-color: #a099a83d;
    	text-align: center;
    	height: 50px;
    	width: 100%;
    	color: #e1e1e1;
    	line-height: 48px;
    	font-size: 20px;
    }

    #notification{
    	position: relative;
    	top: 20px;
    	margin: 20px auto;
    	width: 750px;
    	font-size: 24px;
    }
</style>

</head>

<body>
	<div id="content">
		<h1>Succeed!</h1>
		<p id="notification">Congratulation <b>{{user}}</b>, you have been successfully registered</p>		
		<a href="/"><button class="Btn">Login Now!</button></a>
		<p id="second"></p>
	</div>
</body>

<script type="text/javascript">
	var countdown=5;
    function cd() {
        if (countdown == 0) {
        	clearTimeout(countdown_func)
            window.location.href="/";
            countdown = 5;
        } else {
        	document.getElementById("second").innerHTML = `Automatically back to login page in ${countdown} seconds`;
            countdown --;
            var countdown_func = setTimeout('cd()', 1000)
        }
    }
    cd();
</script>
</html>
